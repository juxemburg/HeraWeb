@using System.Collections.Generic
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http.Authentication
@model LoginViewModel
@inject SignInManager<ApplicationUser> SignInManager

@{
    ViewData["Title"] = "Iniciar Sesión";
    Layout = "_LayoutLogin";
}

<div class="row margin-60">
    <div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3">
        <div class="card card-signup">
            <div class="header header-primary text-center">
                <h4>Inicia Sesión</h4>                
            </div>            
            <form asp-controller="Account" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="content">                    
                    <div class="input-group">
                        <span class="input-group-addon">
                            <i class="material-icons">email</i>
                        </span>
                        <input asp-for="Email" class="form-control" placeholder="Email..."/>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="input-group">
                        <span class="input-group-addon">
                            <i class="material-icons">lock_outline</i>
                        </span>
                        <input asp-for="Password" class="form-control" placeholder="Contraseña..."/>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>                
                <div class="checkbox col-sm-offset-1">
                    <label asp-for="RememberMe">
                        <input asp-for="RememberMe" />
                        @Html.DisplayNameFor(m => m.RememberMe)
                    </label>
                </div>
                <div class="footer text-center">
                    <button type="submit" class="btn btn-simple btn-primary btn-lg col-sm-12">Ingesa en el sitio</button>
                    <a class="btn btn-simple btn-primary btn" asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]">¿Nuevo en el sitio? Regístrate!</a>
                    <a class="btn btn-simple btn-primary btn" asp-action="ForgotPassword">¿Olvidáste tu contraseña?</a>
                </div>                
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
