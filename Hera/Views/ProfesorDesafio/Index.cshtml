@model PaginationViewModel<Desafio>

@{
    ViewData["Title"] = "Desafios";
}

<h3>Tus Desafíos</h3>

<div class="row">
    <div class="col-md-12 text-center">
        <form asp-action="Index" method="get" class="form-inline">
            <div class="form-group label-floating">
                <label class="control-label">Búsqueda</label>
                <input name="searchString" type="text" class="form-control" />
            </div>
            <button class="btn btn-primary btn-xs " type="submit">
                <i class="material-icons">search</i>
            </button>
        </form>
    </div>
    <div class="col-md-12">
        <p>
            <a class="btn btn-icon btn-info" asp-action="Create"
               asp-controller="Desafios">
                Nuevo Desafío
                <i class="material-icons">add_circle_outline</i>
            </a>
        </p>
    </div>
</div>

<table class="table table-striped table-condensed table-responsive">
    <thead>
        <tr>
            <th>
                Nombre
            </th>
            <th>
                Descipción
            </th>
            <th>
                Criterios de Evaluación
            </th>
            <th>
                Acciones
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id">
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </a>
                </td>
                <td>
                    <p>
                        @item.Descripcion
                    </p>
                </td>
                <td>
                    <button class="btn btn-info btn-block col-sm-6" 
                            data-toggle="modal" 
                            data-target="#modal-info-@item.Id">
                        <i class="material-icons">info_outline</i>
                    </button>
                </td>
                <td>
                    <div class="col-xs-12">
                        <a class="btn btn-sm btn-simple" asp-action="Edit">
                            <i class="material-icons">create</i>
                        </a>
                        <a class="btn btn-sm btn-simple btn-danger" asp-action="Delete">
                            <i class="material-icons">delete_forever</i>
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="text-center">
    <ul class="pagination">
        @foreach (var item in Model.Pages)
        {
            <li class="@item.Item2">
                <a asp-action="Index" asp-route-skip="@((item.Item1-1)*Model.Take)"
                   asp-route-take="@Model.Take">
                    @item.Item1
                </a>
            </li>
        }
    </ul>
</div>

@section Modals {
    @foreach (var item in Model)
    {
        <div class="modal fade" id="modal-info-@item.Id" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                        <h4 class="modal-title" id="myModalLabel">
                            Criterios del evaluación - Desafío @item.Nombre
                        </h4>
                    </div>
                    <div class="modal-body">
                        <div class="modal-body">
                            @await Html.PartialAsync("Desafios/_DesafioInfoPartial", item.InfoDesafio)
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default btn-simple" data-dismiss="modal">Cerrar</button>
                    </div>
                </div>
            </div>
        </div>
    }
}