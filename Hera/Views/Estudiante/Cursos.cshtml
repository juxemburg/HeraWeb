@model PaginationViewModel<Curso>

@{
    ViewData["Title"] = "Mis Cursos";
}
@section Styles {
    <link href="~/css/Estudiante/cursos.css" rel="stylesheet" />
}

<h2>Mis Cursos</h2>
<hr />
<br />
<div class="row">
    @foreach (var item in Model)
    {
        <div class="card shadow col-lg-3 col-md-4 col-sm-6">
            <div class="card-header">
                <h3>
                    <a asp-action="CursoDetails">
                        @item.Nombre
                    </a>
                </h3>
                <h4>@item.Profesor.NombreCompleto</h4>
            </div>
            <div class="card-content">
                <p>@item.Descripcion</p>
            </div>
        </div>
    }
</div>



