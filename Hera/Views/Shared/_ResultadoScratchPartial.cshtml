@model ResultadoScratch


<div class="card">
    <div class="card-content">
        <h6 class="category text-info">
            <i class="material-icons">
                info
            </i>
            Datos de la evaluación
        </h6>
        <h4>
            <span class="card-title">
                @Model.Nombre
            </span>
        </h4>
        <div class="row">
            <div class="col-sm-6">
                <dl>
                    <dt>Scripts Muertos:</dt>
                    <dd>@Model.DeadCodeCount</dd>

                    <dt>Scripts Duplicados:</dt>
                    <dd>@Model.DuplicateScriptsCount</dd>

                    <dt>Total Bloques:</dt>
                    <dd>@Model.NumBloques</dd>

                    <dt>Total Scripts:</dt>
                    <dd>@Model.NumScripts</dd>
                </dl>
            </div>
        </div>
        <div class="row text-center">            
            <div class="col-sm-12 col-md-6">
                <button class="btn btn-info btn-block col-sm-6" data-toggle="modal" data-target="#modal-info-@Model.Nombre">
                    <i class="material-icons icon-lg">
                        visibility
                    </i>
                </button>
            </div>
            <div class="col-sm-12 col-md-6">
                <button type="button" class="btn btn-info btn-simple" data-toggle="modal" data-target="#modal-@Model.Nombre">
                    <i class="material-icons icon-lg">
                        view_agenda
                    </i>
                </button>
            </div>
        </div>
        
    </div>
</div>


