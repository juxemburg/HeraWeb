@model LineChartViewModel

<div id="@Model.Id" class="@Model.Class"></div>
<script>
    window.addEventListener("load",() => {

        var data = '@Model.ToJson';
        var dataRoundedLineChart = JSON.parse(data.replace(/&quot;/g, '"'));
        var optionsRoundedLineChart = {
            lineSmooth: Chartist.Interpolation.cardinal({
                tension: 10
            }),
            axisX: {
                showGrid: true
            },
            low: 0,
            high: @Model.MaxValue,
            chartPadding: { top: 0, right: 0, bottom: 0, left: 0 },
            showPoint: false
        }

        new Chartist.Line(
            '#@Model.Id',
            dataRoundedLineChart,
            optionsRoundedLineChart);
    });
</script>