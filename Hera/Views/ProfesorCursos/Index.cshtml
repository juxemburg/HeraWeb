@model PaginationViewModel<Curso>

@{
ViewData["Title"] = "Mis Cursos";
}

<h2>Revisa tus Cursos</h2>

<div class="row">
    <div class="col-md-12">
        <form asp-action="index" method="get" class="form-inline">
            <div class="form-group">
                <label>Búsqueda</label>
                <input name="searchString" type="text" class="form-control" />
            </div>
            <button type="submit" class="btn btn-primary">Buscar</button>
        </form>
    </div>
    <div class="col-md-12">
        <p>
            <a class="btn btn-info" asp-action="Create" asp-controller="Cursos">Crear nuevo curso</a>
        </p>
    </div>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>
                Nombre
            </th>
            <th>
                Descripcion
            </th>
            <th>
                Acciones
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
    {
            <tr>
                <td>
                    <a asp-action="Details" asp-controller="ProfesorCurso" 
                       asp-route-idCurso="@item.Id">
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </a>                     
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descripcion)
                </td>
                <td>
                    <a class="btn btn-info" asp-action="Edit" asp-controller="Cursos">
                        <span class="glyphicon glyphicon-pencil"></span>
                    </a> |
                    <a class="btn btn-danger" asp-action="Edit" asp-controller="Cursos">
                        <span class="glyphicon glyphicon-trash"></span>
                    </a> 
                </td>
            </tr>
    }
    </tbody>
</table>

<div class="text-center">
    <ul class="pagination">
        @foreach (var item in Model.Pages)
    {
            <li class="@item.Item2">
                <a asp-action="Cursos" asp-route-skip="@((item.Item1-1)*Model.Take)"
                    asp-route-take="@Model.Take">
                    @item.Item1
                </a>
            </li>
    }
    </ul>
</div>
