@model PaginationViewModel<Desafio>

@{
    ViewData["Title"] = "Desafios";
}

<h2>Desafíos</h2>

<div class="row">
    <div class="col-md-12 text-center">
        <form asp-action="Index" method="get" class="form-inline">
            <div class="form-group label-floating">
                <label class="control-label">Búsqueda</label>
                <input name="searchString" type="text" class="form-control" />
            </div>
            <button class="btn btn-primary btn-xs " type="submit">
                <i class="material-icons">search</i>
            </button>
        </form>
    </div>
    <div class="col-md-12">
        <p>
            <a class="btn btn-icon btn-info"  asp-action="Create">
            Nuevo Desafío
            <i class="material-icons">add_circle_outline</i>
            </a>
        </p>
    </div>
</div>

<table class="table table-striped table-condensed">
    <thead>
        <tr>
            <th>
                Nombre
            </th>
            <th>
                Autor
            </th>
            <th>
                Descipción
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id">
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </a>
                </td>
                <td>
                    <p>@item.Profesor.NombreCompleto</p>
                </td>
                <td>
                    <p>
                        @item.Descripcion
                    </p>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="text-center">
    <ul class="pagination">
        @foreach (var item in Model.Pages)
        {
            <li class="@item.Item2">
                <a asp-action="Index" asp-route-skip="@((item.Item1-1)*Model.Take)"
                    asp-route-take="@Model.Take">
                    @item.Item1
                </a>
            </li>
        }
    </ul>
</div>

